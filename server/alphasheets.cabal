name:                alphasheets
version:             0.1.0.0
synopsis:            Initial project template from stack
description:         Please see README.md
homepage:            http://github.com/name/project
license:             BSD3
license-file:        LICENSE
author:              Your name here
maintainer:          your.address@example.com
-- copyright:
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     AS.Daemon
                       AS.LanguageDefs
                       AS.DB.API
                       AS.DB.Expanding
                       AS.DB.Export
                       AS.DB.Transaction
                       AS.DB.Internal
                       AS.DB.Graph
                       AS.Dispatch.Core
                       AS.Dispatch.EvalHeader
                       AS.Dispatch.Repl
                       AS.Dispatch.Expanding
                       AS.Clients
                       AS.Config.Paths
                       AS.Config.Settings
                       AS.Eval.CondFormat
                       AS.Eval.Core
                       AS.Eval.Endware
                       AS.Eval.Middleware
                       AS.Handlers.Eval
                       AS.Handlers.JumpSelect
                       AS.Handlers.Misc
                       AS.Handlers.Mutate
                       AS.Handlers.Paste
                       AS.Handlers.Props
                       AS.InferenceUtils
                       AS.Kernels.Python.Eval
                       AS.Kernels.Python.Pyfi
                       AS.Kernels.Python.Str
                       AS.Kernels.Excel.Eval
                       AS.Kernels.Excel.Compiler
                       AS.Kernels.Excel.Lib
                       AS.Kernels.Excel.Util
                       AS.Kernels.LanguageUtils
                       AS.Kernels.OCaml
                       AS.Kernels.Common
                       AS.Kernels.R
                       AS.Logging
                       AS.Parsing.Common
                       AS.Parsing.Show
                       AS.Parsing.Read
                       AS.Parsing.Excel
                       AS.Parsing.Substitutions
                       AS.Reply
                       AS.Types.Common
                       AS.Types.Cell
                       AS.Types.CellProps
                       AS.Types.Commits
                       AS.Types.DB
                       AS.Types.Errors
                       AS.Types.Eval
                       AS.Types.Excel
                       AS.Types.Locations
                       AS.Types.Messages
                       AS.Types.Network
                       AS.Types.Sheets
                       AS.Types.User
                       AS.Users
                       AS.Util
                       AS.Window
  build-depends:       base >= 4.7 && < 5
                     , text >= 0.11 && < 2.0
                     , filepath
                     , time
                     , aeson
                     , monad-control
                     , parsec
                     , split
                     , strict
                     , directory
                     , process
                     , regex-posix
                     , containers
                     , transformers
                     , mtl
                     , vector
                     , bytestring
                     , websockets
                     , hedis
                     , daemons
                     , data-default
                     , monad-loops
                     , uuid
                     , zeromq4-haskell
                     , semigroups
                     , bytestring-show
                     , template-haskell
                     , pureMD5
                     , either
                     , statistics
                     , MissingH
                     , inline-r
                     , deepseq
                     , deepseq-generics
                     , cereal
                     , regex-compat
  default-language:    Haskell2010
  default-extensions:  QuasiQuotes
                       FlexibleContexts
                       OverloadedStrings
                       TypeSynonymInstances
                       FlexibleInstances
  PkgConfig-Depends:   python
  other-extensions:    ForeignFunctionInterface
                       CPP

executable alphasheets-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -O2
                       -threaded
                       -with-rtsopts=-N
                       -W
  build-depends:       base
                     , alphasheets
                     , aeson
                     , websockets
                     , text
                     , transformers
                     , bytestring
                     , hedis
                     , daemons
                     , data-default
                     , either
                     , inline-r
                     , parsec
  PkgConfig-Depends:   python
  extra-libraries:     hiredis
  extra-lib-dirs:     /usr/local/lib
  c-sources:           src/csources/redis_db.c
                     , src/AS/Kernels/Python/cdefs.c
  default-language:    Haskell2010

test-suite alphasheets-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , alphasheets
                     , text
                     , hedis
                     , bytestring
                     , parsec
                     , either
                     , containers
                     , vector
                     , mtl
                     , transformers
                     , inline-r
  ghc-options:         -O2
                       -threaded
                       -with-rtsopts=-N
  PkgConfig-Depends:   python
  extra-libraries:     hiredis
  extra-lib-dirs:     /usr/local/lib

  c-sources:           src/csources/redis_db.c
                     , src/AS/Kernels/Python/cdefs.c
  default-language:    Haskell2010

test-suite excel-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             ExcelTest.hs
  build-depends:       base
                     , alphasheets
                     , text
                     , bytestring
                     , parsec
                     , either
                     , containers
                     , vector
                     , mtl
                     , transformers
                     , hspec
  ghc-options:         -O2
                       -threaded
                       -with-rtsopts=-N
  PkgConfig-Depends:   python
  extra-libraries:     hiredis
  extra-lib-dirs:     /usr/local/lib

  c-sources:           src/csources/redis_db.c
                     , src/AS/Kernels/Python/cdefs.c
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/name/project
